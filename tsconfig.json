{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@domain/*": ["src/domain/*"],
      "@business/*": ["src/business/*"],
      "@infra/*": ["src/infra/*"],
      "@application/*": ["src/application/*"]
    }
  },
  "include": ["server.ts", "src"],
  "exclude": ["dist"],
  "lib": ["es2015"]
}